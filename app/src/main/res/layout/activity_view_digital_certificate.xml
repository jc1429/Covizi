<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.covizi.ViewDigitalCertificate">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.covizi.ViewDigitalCertificate"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/header_bg"
            android:layout_width="match_parent"
            android:layout_marginTop="-15dp"
            android:layout_height="wrap_content"
            android:elevation="50dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/blue"
            app:cardCornerRadius="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/digital_certificate"
                android:gravity="center_horizontal"
                android:fontFamily="@font/oxygen_bold"
                android:textColor="@color/White"
                android:layout_marginTop="40dp"
                android:layout_marginStart="80dp"
                android:layout_marginBottom="30dp"
                android:textSize="30sp"/>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/back_btn"
                android:layout_marginStart="20dp"
                android:onClick="back"
                android:layout_gravity="left"
                android:layout_marginTop="48dp"
                tools:ignore="RtlHardcoded" />
        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:id="@+id/grey_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/light_purple"
            android:layout_margin="10dp"
            app:cardCornerRadius="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:background="@drawable/img_logo_circle"
                    android:layout_gravity="center"
                    android:layout_margin="10dp" />


                <TextView
                    android:id="@+id/digitalCertTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Digital Certificate"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:layout_margin="10dp"
                    android:textStyle="bold"
                    android:textSize="30sp" />


                <TextView
                    android:id="@+id/digitalCertTitleDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="for COVID-19 Vaccination"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="20sp" />


                <TextView
                    android:id="@+id/digitalCertName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loo Tong Yee"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:textStyle="bold"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/digitalCertIC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="980321081234"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="20sp" />



                <androidx.cardview.widget.CardView
                    android:id="@+id/vaccineCard1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_centerHorizontal="true"
                    app:cardBackgroundColor="@color/darkblue"
                    app:cardCornerRadius="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/Dose1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="Dose 1:"
                            android:textColor="@color/white"
                            android:layout_margin="10dp"
                            android:textStyle="bold"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/Dose1Date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/dose1Date"
                            android:textColor="@color/white"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/Dose1Manufacturer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/manufacturer"
                            android:textColor="@color/white"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/Dose1Facility"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="Facility: Xiamen University Malaysia"
                            android:textColor="@color/white"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/Dose1Batch"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="Batch: 5012675"
                            android:textColor="@color/white"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:textSize="15sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>



                <!--Dose 2 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/vaccineCard2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_centerHorizontal="true"
                    app:cardBackgroundColor="@color/darkblue"
                    app:cardCornerRadius="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/Dose2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="Dose 2:"
                            android:textColor="@color/white"
                            android:layout_margin="10dp"
                            android:textStyle="bold"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/Dose2Date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="Date: 27 January 2021 09:00 AM"
                            android:textColor="@color/white"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/Dose2Manufacturer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/manufacturer"
                            android:textColor="@color/white"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/Dose2Facility"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="Facility: Xiamen University Malaysia"
                            android:textColor="@color/white"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/Dose2Batch"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="Batch: 5012675"
                            android:textColor="@color/white"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:textSize="15sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>



            </LinearLayout>



        </androidx.cardview.widget.CardView>




    </LinearLayout>

</ScrollView>