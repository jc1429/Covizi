<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="60dp"
    tools:context="com.example.covizi.ui.stats.MalaysiaStatsFragment">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.statistics.MalaysiaStatsFragment"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/grey"
            android:layout_margin="20dp"
            app:cardCornerRadius="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvR"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    app:cardBackgroundColor="@color/darkblue"
                    app:cardCornerRadius="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:text="R Value"
                            android:textColor="@color/white"
                            android:layout_marginTop="30dp"
                            android:textStyle="bold"
                            android:textSize="34sp" />

                        <TextView
                            android:id="@+id/txtdateTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="5dp"
                            android:textAlignment="center"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/white"
                            android:text="Until 14 Oct 2021 04:31"
                            android:textStyle="bold"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/txtValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/white"
                            android:textSize="50sp"
                            android:text="1.07"
                            android:textStyle="bold" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- total cases -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cvTotalCases"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    app:cardBackgroundColor="@color/red"
                    app:cardCornerRadius="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtTitle2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Total Confirmed Cases"
                            android:textColor="@color/white"
                            android:textAlignment="center"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:textStyle="bold"
                            android:layout_marginTop="30dp"
                            android:textSize="30sp" />

                        <TextView
                            android:id="@+id/txtdateTime2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="5dp"
                            android:textAlignment="center"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/white"
                            android:text="Until 14 Oct 2021 04:31"
                            android:textStyle="bold"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/txtValue2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/white"
                            android:textSize="50sp"
                            android:text="2,353,579"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/white"
                            android:textAlignment="center"
                            android:textSize="20sp"
                            android:text="@string/textStatsToday"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtNewCases2"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/white"
                            android:textColor="@color/red"
                            android:textAlignment="center"
                            android:text="+2,359 Today"
                            android:textStyle="bold"
                            android:textSize="18sp"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Recovery cases -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cvRecoveryCases"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    app:cardBackgroundColor="@color/green"
                    app:cardCornerRadius="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtTitle3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Total Recovered Cases"
                            android:textColor="@color/white"
                            android:textAlignment="center"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="30dp"
                            android:textStyle="bold"
                            android:textSize="30sp" />

                        <TextView
                            android:id="@+id/txtdateTime3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/white"
                            android:text="Until 14 Oct 2021 04:31"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/txtValue3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/white"
                            android:textSize="50sp"
                            android:text="2,217,057"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/white"
                            android:textAlignment="center"
                            android:textSize="20sp"
                            android:text="@string/textStatsToday"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtNewCases3"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/green"
                            android:text="+10,155 Today"
                            android:textAlignment="center"
                            android:background="@color/white"
                            android:textStyle="bold"
                            android:textSize="18sp"/>



                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Death cases -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cvDeathCases"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    app:cardBackgroundColor="@color/light_black"
                    app:cardCornerRadius="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtTitle4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Total Death Cases"
                            android:textColor="@color/white"
                            android:textAlignment="center"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="30dp"
                            android:textStyle="bold"
                            android:textSize="30sp" />

                        <TextView
                            android:id="@+id/txtdateTime4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/white"
                            android:text="Until 14 Oct 2021 04:31"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/txtValue4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/white"
                            android:textSize="50sp"
                            android:text="27,525"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/white"
                            android:textAlignment="center"
                            android:textSize="20sp"
                            android:text="@string/textStatsToday"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtNewCases4"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/light_black"
                            android:textAlignment="center"
                            android:background="@color/white"
                            android:text="+ 0 Today"
                            android:textStyle="bold"
                            android:textSize="18sp"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Active cases -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cvActiveCases"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="40dp"
                    app:cardBackgroundColor="@color/brown"
                    app:cardCornerRadius="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtTitle5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Total Active Cases"
                            android:textColor="@color/white"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="30dp"
                            android:textSize="30sp" />

                        <TextView
                            android:id="@+id/txtdateTime5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/white"
                            android:text="Until 14 Oct 2021 04:31"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/txtValue5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/white"
                            android:textSize="50sp"
                            android:text="230,162"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/white"
                            android:textAlignment="center"
                            android:textSize="20sp"
                            android:text="@string/textStatsToday"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtNewCases5"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/white"
                            android:textColor="@color/brown"
                            android:text=" 1245 "
                            android:textStyle="bold"
                            android:textSize="18sp"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>