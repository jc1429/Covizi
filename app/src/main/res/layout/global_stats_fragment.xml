<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="60dp"
    tools:context="com.example.covizi.ui.stats.GlobalStatsFragment">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".ui.statistics.GlobalStatsFragment"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/grey"
            android:layout_margin="20dp"
            app:cardCornerRadius="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">



                <!-- total cases -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cvTotalCases"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    app:cardBackgroundColor="@color/red"
                    app:cardCornerRadius="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtTitle2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="World Confirmed Cases"
                            android:textColor="@color/white"
                            android:textAlignment="center"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:textStyle="bold"
                            android:layout_marginTop="30dp"
                            android:textSize="30sp" />

                        <TextView
                            android:id="@+id/txtdateTime2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/white"
                            android:text="Until 14 Oct 2021 04:31"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/txtValue2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/white"
                            android:textSize="50sp"
                            android:text="242,727,571"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/white"
                            android:textAlignment="center"
                            android:textSize="20sp"
                            android:text="@string/textStatsToday"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtNewCases2"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/white"
                            android:textColor="@color/red"
                            android:textAlignment="center"
                            android:text="+ 461,831 Today"
                            android:textStyle="bold"
                            android:textSize="18sp"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Recovery cases -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cvRecoveryCases"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    app:cardBackgroundColor="@color/green"
                    app:cardCornerRadius="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtTitle3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="World Recovered Cases"
                            android:textColor="@color/white"
                            android:textAlignment="center"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="30dp"
                            android:textStyle="bold"
                            android:textSize="30sp" />

                        <TextView
                            android:id="@+id/txtdateTime3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/white"
                            android:text="Until 14 Oct 2021 04:31"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/txtValue3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/white"
                            android:textSize="50sp"
                            android:text="218,291,540"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/white"
                            android:textAlignment="center"
                            android:textSize="20sp"
                            android:text="@string/textStatsToday"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtNewCases3"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/green"
                            android:text="+ 392,881 Today"
                            android:textAlignment="center"
                            android:background="@color/white"
                            android:textStyle="bold"
                            android:textSize="18sp"/>



                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Death cases -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cvDeathCases"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    app:cardBackgroundColor="@color/light_black"
                    app:cardCornerRadius="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtTitle4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Total Death Cases"
                            android:textColor="@color/white"
                            android:textAlignment="center"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="30dp"
                            android:textStyle="bold"
                            android:textSize="30sp" />

                        <TextView
                            android:id="@+id/txtdateTime4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/white"
                            android:text="Until 14 Oct 2021 04:31"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/txtValue4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/white"
                            android:textSize="50sp"
                            android:text="4,936,778"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/white"
                            android:textAlignment="center"
                            android:textSize="20sp"
                            android:text="@string/textStatsToday"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtNewCases4"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/light_black"
                            android:textAlignment="center"
                            android:background="@color/white"
                            android:text="+ 8,594 Today"
                            android:textStyle="bold"
                            android:textSize="18sp"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Active cases -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cvActiveCases"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="40dp"
                    app:cardBackgroundColor="@color/brown"
                    app:cardCornerRadius="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtTitle5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Total Active Cases"
                            android:textColor="@color/white"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="30dp"
                            android:textSize="30sp" />

                        <TextView
                            android:id="@+id/txtdateTime5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/white"
                            android:text="Until 14 Oct 2021 04:31"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/txtValue5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/white"
                            android:textSize="50sp"
                            android:text="19,499,253"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/white"
                            android:textAlignment="center"
                            android:textSize="20sp"
                            android:text="@string/textStatsToday"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtNewCases5"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/white"
                            android:textColor="@color/brown"
                            android:text=" 60,356 "
                            android:textStyle="bold"
                            android:textSize="18sp"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>