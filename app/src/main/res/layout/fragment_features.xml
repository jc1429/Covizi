<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FeaturesFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/checkIn_bg"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_centerHorizontal="true"
        app:cardBackgroundColor="@color/title_color"
        app:cardCornerRadius="25dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_Hotspot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/img_hotspot" />

            <TextView
                android:id="@+id/txt_hotspot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/img_Hotspot"
                android:layout_marginLeft="27dp"
                android:textColor="@color/white"
                android:layout_marginBottom="-26dp"
                android:fontFamily="@font/oxygen_bold"
                android:textSize="15sp"
                android:text="Hotspot" />

            <ImageView
                android:id="@+id/img_qna"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/img_qna"
                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/img_Hotspot"
                android:layout_marginLeft="60dp"/>

            <TextView
                android:id="@+id/txt_qna"
                android:layout_toRightOf="@id/txt_hotspot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/img_qna"
                android:layout_marginLeft="85dp"
                android:textColor="@color/white"
                android:layout_marginBottom="-30dp"
                android:fontFamily="@font/oxygen_bold"
                android:textSize="15sp"
                android:text="FAQs" />

            <ImageView
                android:id="@+id/img_report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/img_report"
                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/img_qna"
                android:layout_marginLeft="60dp"/>

            <TextView
                android:id="@+id/txt_report"
                android:layout_toRightOf="@id/txt_qna"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/img_report"
                android:layout_marginLeft="90dp"
                android:textColor="@color/white"
                android:layout_marginBottom="-30dp"
                android:fontFamily="@font/oxygen_bold"
                android:textSize="15sp"
                android:text="Report" />

            <ImageView
                android:id="@+id/img_vaccine_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:background="@drawable/img_vaccine"
                android:gravity="center_vertical"
                android:layout_below="@+id/txt_hotspot"
                android:layout_marginLeft="20dp"
                />

            <TextView
                android:id="@+id/txt_vaccination"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/img_vaccine_status"
                android:layout_marginLeft="25dp"
                android:layout_marginBottom="-53dp"
                android:fontFamily="@font/oxygen_bold"
                android:text="Vaccination Status"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/img_vaccine_form"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:background="@drawable/img_form"
                android:gravity="center_vertical"
                android:layout_below="@id/txt_qna"
                android:layout_toRightOf="@id/img_vaccine_status"
                android:layout_marginLeft="60dp"
                />

            <TextView
                android:id="@+id/txt_form"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/img_vaccine_form"
                android:layout_toRightOf="@id/txt_vaccination"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="-53dp"
                android:fontFamily="@font/oxygen_bold"
                android:text="Vaccination Form"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/img_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:background="@drawable/img_logout"
                android:gravity="center_vertical"
                android:layout_below="@+id/txt_report"
                android:layout_toRightOf="@id/img_vaccine_form"
                android:layout_marginLeft="60dp"
                />

            <TextView
                android:id="@+id/txt_logout"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/img_vaccine_form"
                android:layout_toRightOf="@id/txt_form"
                android:layout_marginLeft="14dp"
                android:layout_marginBottom="-35dp"
                android:fontFamily="@font/oxygen_bold"
                android:text="Logout"
                android:textColor="@color/white"
                android:textSize="15sp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>