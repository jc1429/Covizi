<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.covizi.Vaccine_Status_2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.covizi.VaccinationStatus"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/header_bg"
            android:layout_width="match_parent"
            android:layout_marginTop="-15dp"
            android:layout_height="wrap_content"
            android:elevation="50dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/blue"
            app:cardCornerRadius="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vaccination Status"
                android:gravity="center_horizontal"
                android:fontFamily="@font/oxygen_bold"
                android:textColor="@color/White"
                android:layout_marginTop="40dp"
                android:layout_marginStart="80dp"
                android:layout_marginBottom="30dp"
                android:textSize="30sp"/>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/back_btn"
                android:layout_marginStart="20dp"
                android:layout_gravity="left"
                android:onClick="back"
                android:layout_marginTop="48dp"
                tools:ignore="RtlHardcoded" />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/grey_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/light_purple"
            android:layout_margin="10dp"
            app:cardCornerRadius="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/digitalCertTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name :"
                    android:layout_gravity="left"
                    android:textColor="@color/white"
                    android:layout_margin="10dp"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/digitalCertName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loo Tong Yee"
                    android:layout_gravity="left"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:textStyle="bold"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/txt_IcNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="IC Number :"
                    android:layout_gravity="left"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/digitalCertIC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="980321081234"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="20sp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/vaccineCard1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_centerHorizontal="true"
                    app:cardBackgroundColor="@color/darkblue"
                    app:cardCornerRadius="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/Registration"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="Registration"
                            android:textColor="@color/white"
                            android:layout_margin="10dp"
                            android:textStyle="bold"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/detail_registration"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text=" • Completed on 30 December 2021"
                            android:textColor="@color/white"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/title_health_declaration"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="Health Declaration"
                            android:textColor="@color/white"
                            android:layout_marginLeft="10dp"
                            android:visibility="visible"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:textStyle="bold"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/detail_health_declaration"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/completed_your_health_declaration_now"
                            android:onClick="Vaccine_Status3"
                            android:clickable="true"
                            android:textColor="@color/white"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/title_first_dose_appointment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="First Dose Appointment"
                            android:visibility="invisible"
                            android:textColor="@color/white"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:textStyle="bold"
                            android:textSize="18sp" />
                        <androidx.cardview.widget.CardView
                            android:id="@+id/vaccineCard_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:visibility="invisible"
                            android:layout_centerHorizontal="true"
                            app:cardBackgroundColor="@color/deepBlue"
                            app:cardCornerRadius="15dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/Dose1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text="Dose 1:"
                                    android:visibility="invisible"
                                    android:textColor="@color/white"
                                    android:layout_margin="10dp"
                                    android:textStyle="bold"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/Dose1Date"
                                    android:layout_width="match_parent"
                                    android:visibility="invisible"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text="@string/dose1Date"
                                    android:textColor="@color/white"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:textSize="15sp" />

                                <TextView
                                    android:id="@+id/Dose1Manufacturer"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text="@string/manufacturer"
                                    android:textColor="@color/white"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:visibility="invisible"
                                    android:textSize="15sp" />

                                <TextView
                                    android:id="@+id/Dose1Facility"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text="Facility: Xiamen University Malaysia"
                                    android:textColor="@color/white"
                                    android:visibility="invisible"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:textSize="15sp" />

                                <TextView
                                    android:id="@+id/Dose1Batch"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text="Batch: 5012675"
                                    android:textColor="@color/white"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:visibility="invisible"
                                    android:textSize="15sp" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/detail_first_dose_appointment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text=" • "
                            android:textColor="@color/white"
                            android:visibility="invisible"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/title_first_dose_completed"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="First Dose Completed"
                            android:visibility="invisible"
                            android:textColor="@color/white"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:textStyle="bold"
                            android:textSize="18sp" />


                        <TextView
                            android:id="@+id/title_second_dose_appointment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="Second Dose Appointment"
                            android:visibility="invisible"
                            android:textColor="@color/white"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:textStyle="bold"
                            android:textSize="18sp" />

                        <!--Dose 2 -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/vaccineCard2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:layout_centerHorizontal="true"
                            android:visibility="invisible"
                            app:cardBackgroundColor="@color/deepBlue"
                            app:cardCornerRadius="15dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/Dose2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text="Dose 2:"
                                    android:textColor="@color/white"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:textStyle="bold"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/Dose2Date"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text="Date: 26 September 2021 08:00 AM"
                                    android:textColor="@color/white"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:textSize="15sp" />

                                <TextView
                                    android:id="@+id/Dose2Manufacturer"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text="@string/manufacturer"
                                    android:textColor="@color/white"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:textSize="15sp" />

                                <TextView
                                    android:id="@+id/Dose2Facility"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text="Facility: Xiamen University Malaysia"
                                    android:textColor="@color/white"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:textSize="15sp" />

                                <TextView
                                    android:id="@+id/Dose2Batch"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text="Batch: 5012675"
                                    android:textColor="@color/white"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:textSize="15sp" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/digitalCert_Title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="Digital Certificate"
                            android:visibility="invisible"
                            android:textColor="@color/white"
                            android:layout_margin="10dp"
                            android:textStyle="bold"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/detail_digital_cert"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/view_digital_cert"
                            android:textColor="@color/white"
                            android:layout_marginLeft="10dp"
                            android:visibility="invisible"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:textSize="15sp" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>


        </androidx.cardview.widget.CardView>
















    </LinearLayout>

</ScrollView>