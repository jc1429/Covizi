<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/title_color"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="10dp"
        app:cardCornerRadius="7dp"
        app:cardElevation="7dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/img_covizi"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:src="@drawable/app_icon"/>
        <TextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/img_covizi"
            android:text="COVizi"
            android:textColor="@color/blue"
            android:fontFamily="@font/oxygen_bold"
            android:textSize="25sp"
            />

            <TextView
                android:id="@+id/post_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/app_name"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/img_covizi"
                android:fontFamily="@font/oxygen_bold"
                android:text="26 Oct 2021, 12:00PM"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/title_things"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_covizi"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/oxygen_bold"
                android:text="COVID-19 IN MALAYSIA AS OF 27 December 2021"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/cases"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_below="@id/title_things"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:src="@drawable/covid_case" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>